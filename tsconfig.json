{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./build/",
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "strict": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "newLine": "LF",
        "paths": {
            "*": [
                "./node_modules/@types/*",
                "*"
            ],
            "harp-leaflet": ["./src/index.ts"]
        },
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
